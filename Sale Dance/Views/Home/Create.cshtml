@using Sale_Dance.Models.ViewModel
@model  Sale_Dance.Models.ViewModel.PostViewModel
@{
    ViewData["Title"] = "Create";
}

<br />

<h2 class="text-info">צור פוסט חדש</h2>

<form method="post" asp-action="Create">

    <div class="p-4 border rounded">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">

            <div class="col-2">

                <label> כותרת</label>
            </div>
            <div class="col-5">
                <input asp-for="@Model.Name" class="form-control" />
            </div>
            <span asp-validation-for="@Model.Name" class="text-danger"></span>

        </div>

        <div class="form-group row">

            <div class="col-2">

                <label> תוכן הפוסט</label>
            </div>
            <div class="col-5">
                <textarea asp-for="@Model.Body" class="form-control" rows="4"></textarea>
            </div>
            <span asp-validation-for="@Model.Body" class="text-danger"></span>

          
        </div>
         
        <div class="d-block row">
            <h3>הוספת מבצעים לפוסט</h3>
            <p class="text-danger">כדי להוסיף מבצעים עלייך קודם ליצור את הפוסט. בעריכה, תוכל להוסיף מבצעים.</p>
            </div>

        <div class="form-group text-left">

            <input type="submit" class="btn btn-primary" value="צור פוסט" />
            <a asp-action="Index" class="btn btn-success">חזרה לפוסטים</a>

        </div>

      
    </div>
</form>

@section Scripts{

    @{ 
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

    }
   
}