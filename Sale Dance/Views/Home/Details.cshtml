@model Sale_Dance.Models.Post
@{
    ViewData["Title"] = "Details";
}

<br />

<h2 class="text-info">@Model.Name</h2>

<form method="post" asp-action="Edit">
    <input type="hidden" asp-for="id" />
    <div class="p-4 border rounded">

        <div asp-validation-summary"ModelOnly" class="text-danger"></div>
        <div class="form-group row">

            <div class="col-2">
                <label>נוצר</label>

            </div>

            <div class="col-4">
                <label>@Model.CreatedOn</label>

            </div>

        </div>

        <br />

        <div class="form-group text-left">
            <a asp-action="Edit" asp-route-id="@Model.id" class="btn btn-primary">ערוך פוסט</a>
            <input type="submit" asp-route-id="@Model.id" class="btn btn-danger" value="מחק פוסט" />

            <a asp-action="Index" class="btn btn-success">חזרה לפוסטים</a>

        </div>
    </div>
</form>

@section Scripts{

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}